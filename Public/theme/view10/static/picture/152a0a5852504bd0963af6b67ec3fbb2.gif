                    localStorage.setItem('fileUrl',JSON.stringify(response.data));
                }
                getBannerMsg();
            },
            error: function(e) {
                getBannerMsg();
                console.error(e);
            }
        });

        function getBannerMsg() {
            // 获取banner图
            // 加载数据
            bannerHtml = `<div class=\"index-banner-item item active\">\n
        <img class=\"index-banner-1 index-banner-img\" src=\"./images/index/banner1.jpg\">\n
        </div>`;

            $(".carousel-inner").empty();
            $(".carousel-inner").append(bannerHtml);

            var bannerNum = 1;
            var bannerNumPerPage = 10;
            var bannerPath = $.apiPath.bannerPath + '?pageNum=' + bannerNum + '&numPerPage=' + bannerNumPerPage ;
            $.getBannerMsg(bannerPath, '.carousel-inner' , function(response) {
                var data = response.data;
                if( data.recordList && data.recordList.length !== 0){
                    bannerHtml = "";
                    indicatorHtml = "";
                    for (var i = 0; i < data.recordList.length; i++) {
                        if (i === 0) {
                            bannerHtml += "<div class=\"index-banner-item item active\">\n" +
                                "<a href=\"" + $.addHttp(data.recordList[i].url) + "\"><img class='index-banner-" + i + " index-banner-img' src=\"" + $.addDomain(data.recordList[i].image) + "\" alt=\"\">\n" +
                                "</a></div>";
                            indicatorHtml += "<li class=\"index\-slide\-li active\" data-target=\"#myCarousel\" data-slide-to=\"" + i + "\" class=\"active\"></li>";
                        } else {
                            bannerHtml += "<div class=\"index-banner-item item\">\n" +
                                "<a href=\"" + $.addHttp(data.recordList[i].url) + "\"><img class='index-banner-" + i + " index-banner-img' src=\"" + $.addDomain(data.recordList[i].image) + "\" alt=\"\">\n" +
                                "</a></div>";
                            indicatorHtml += "<li class=\"index\-slide\-li\" data-target=\"#myCarousel\" data-slide-to=\"" + i + "\"></li>";
                        }
                    }
                }
                $(".carousel-inner").empty();
                $(".carousel-inner").append(bannerHtml);
                $(".carousel-indicators").empty();
                $(".carousel-indicators").append(indicatorHtml);

                //  鼠标浮动循环,节流
                var now = Date.now();
                $(".carousel-indicators li").mouseenter(function() {
                    var thisTime = Date.now();
                    // console.log(thisTime,now);

                    if( thisTime - now > 300){
                        $(this).trigger("click");
                        $('#myCarousel').carousel("pause");
                    }
                    now = thisTime;
                });
                $(".carousel-indicators li").mouseout(function() {
                    $('#myCarousel').carousel("cycle");
                });
                $('#myCarousel').mouseover(function() {
                    $('#myCarousel').carousel("pause");
                });
                $('#myCarousel').mouseout(function() {
                    $('#myCarousel').carousel("cycle");
                });

                $('#myCarousel').carousel({
                    interval: 3000,
                    pause: "hover"
                });
            });
        }

        $('#myCarousel').carousel({
            interval: 5000,
            pause: "hover"
        });
        if($(document).width() <= 750){
            $('.index-banner-img').each(function(index) {
                $(this).attr('src','./images/index/sm-banner'+ (index + 1) + '.png');
            });
        }else if(($(document).width() <= 1200) && $(document).width() > 750) {
            $('.index-banner-img').css('margin-left',Math.floor( ($(document).width() - 1200)/2));
        }else{
            $('.index-banner-img').css('margin-left',Math.floor( ($(document).width() - 2300)/2));
        }
        $(window).resize(function(){
            if($(document).width() <= 750){
                $('.index-banner-img').each(function(index) {
                    $(this).attr('src','./images/index/sm-banner'+ (index + 1) + '.png');
                });
            }else if(($(document).width() <= 1200) && $(document).width() > 750) {
                $('.index-banner-img').css('margin-left',Math.floor( ($(document).width() - 1200)/2));
            }else{
                $('.index-banner-img').css('margin-left',Math.floor( ($(document).width() - 2300)/2));
            }
        });


        // 获取新闻列表
        var indexNewNum = 1;
        var indexNewPerPage = 6;
        var newsPath = $.apiPath.newsPath + '?pageNum=' + indexNewNum + '&numPerPage=' + indexNewPerPage ;
        $.getIndexNews(newsPath, '.index-news-text' , function(response) {
            firstListHtml = "";
            newsListHtml = "";

            if(response.data && response.data.recordList && response.data.recordList.length !== 0){
                var recordList = response.data.recordList;
                var imgUrl = recordList[0].mainPic ? $.addDomain(recordList[0].mainPic) : './images/new/new-default.png';
                $('.index-news-img').attr('src',imgUrl);
                $('.index-img-a').attr('href',$.getProUrl() + "/news/" + recordList[0].id + ".html");

                firstListHtml = "<div class=\"index-new-first\"><a href=\"" + $.getProUrl() + "/news/" + recordList[0].id + ".html\"><span class=\"index-news-title\">" + recordList[0].title + "</span>\n" +
                    "<p class=\"index-news-content\">" + recordList[0].summary + "</p>\n</a></div>";

                for (var i = 1; i < recordList.length; i++) {
                    newsListHtml += "<li class='index-news-item'><a href=\"" + $.getProUrl() + "/news/" + recordList[i].id + ".html\" >" + recordList[i].title + "</a></li>";
                }

                $(".index-news-text").empty();
                $(".index-news-text").append(firstListHtml);
                $(".index-news-list").empty();
                $(".index-news-list").append(newsListHtml);

                if ( recordList.length >= 6) {
                    $(".index-news").append("<span class=\"index-news-more\"><a href=\"./pages/newsCenter.html\">更多 &gt</a></span>");
                }

                $('.index-news-content').each(function () {
                    $clamp(this, {clamp: 3});
                });

            }else{
                $(".index-news").empty();
                $('.index-news-img').attr('src','./images/index/banner1.jpg');
                $('.index-news').append("<span class=\"msg-not-find\">暂无新闻数据</span>");
            }
        });

        $('.banner-icon1').on('click',function (){
            if($('#udesk_container').css('display') == 'none'){
                $('#udesk_container').css('display','block');
            } else {
                $('#udesk_container').css('display','none');
            }
        })
    })
</script>
