<script>
    //初始化模态框

$(window).on('load',function(){
    loadNoticeData();
});

function init() {
    if (document.getElementById('panelBody').scrollHeight >  document.getElementById('panelBody').clientHeight) {
        document.getElementById('modal-btn').innerText = '我已阅读并确认';
    } else {
        document.getElementById('modal-btn').innerText =  '3s';
        document.getElementById('modal-tip').style.display = 'none'
        var num = 2
        var count = setInterval(function () {
            document.getElementById('modal-btn').innerText =  num + 's';
        num--
        if (num < 0) {
            document.getElementById('modal-btn').removeAttribute('disabled')
            document.getElementById('modal-btn').innerText = '我已阅读并确认';
            clearInterval(count)
        }

    },1000)
    }
    document.getElementById('panelBody').addEventListener('scroll', function () {
        if((Math.ceil(parseFloat(document.getElementById('panelBody').scrollTop)) + parseInt(document.getElementById('panelBody').clientHeight)) < (parseInt(document.getElementById('panelBody').scrollHeight))) {
//                        _this.scollBottom = true
        }else {
            document.getElementById('modal-tip').style.display = 'none'
            document.getElementById('modal-btn').removeAttribute('disabled')
        }
    })
}

function loadNoticeData(){
    $.ajax({
        type: 'GET',
        url: $.apiPath.host + $.apiPath.getUnclosedNotice,
        dataType: 'json',
        crossDomain: true == !(document.all),
        success: function(response) {
            if(response.msg === 'success' && response.data !== null) {
                    $('#myModal').modal('show');
                    $('#myModal').on('shown.bs.modal', function (e) {
                        init();
                    })
                    document.getElementById('panelBody').innerHTML =  response.data.content;
                    document.getElementById('myModalLabel').innerText =  response.data.title;
                    init();
            }
        },
        error: function(e) {
            console.error(e);
        }
    });
}
</script>
